<div class="portfolio-item-show">
  <h1>
    <%= @portfolio.title %>
  </h1>

  <h3>
    <%= @portfolio.subtitle %>
  </h3>

  <p>
    <%= @portfolio.body %>
  </p>

  <%= image_tag @portfolio.main_image %>

  <h2>Technologies</h2>
  <%= @portfolio.technologies.each do |technology| %>
    <p>
      <%= technology.name %>
    </p>
  <% end %>
</div>

<%= link_to 'back', portfolios_path %>
